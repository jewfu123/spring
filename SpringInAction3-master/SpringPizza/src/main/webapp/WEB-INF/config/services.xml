<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="pricingEngine"
          class="com.vonzhou.springinaction.pizza.service.PricingEngineImpl"/>

    <!--
      <lang:groovy id="pricingEngineGroovy"
          script-source="classpath:scripts/PricingEngineImpl.groovy" />
     -->

    <bean id="customerService"
          class="com.vonzhou.springinaction.pizza.service.CustomerServiceImpl"/>

    <!-- Payment processing bean, as discussed on page 606 -->
    <bean id="paymentProcessor"
          class="com.vonzhou.springinaction.pizza.service.PaymentProcessor"/>

    <bean id="orderService"
          class="com.vonzhou.springinaction.pizza.service.OrderServiceImpl"/>

</beans>
